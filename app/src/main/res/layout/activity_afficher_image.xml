<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_gravity="center_vertical"
    android:orientation="vertical"
    android:background="@color/black_overlay"
    android:weightSum="1"
    tools:context="com.example.aymen.projet.AfficherImage">
    <LinearLayout
        android:background="@color/black_overlay"
        android:padding="5.0dip"
        android:layout_width="fill_parent"
        android:layout_height="149dp"
        android:layout_weight="0.0">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/i"
                android:layout_width="170.0dip"
                android:layout_height="110.0dip"
                android:layout_margin="2.0dip"
                android:src="@drawable/main" />
            <TextView
                android:textAppearance="?android:textAppearanceMedium"
                android:textColor="#ff2c0000"
                android:gravity="left"
                android:id="@+id/textView8"
                android:background="@color/black_overlay"
                android:paddingLeft="27.0dip"
                android:layout_width="fill_parent"
                android:layout_height="30dip" />
        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent">
            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="200.0dip"
                android:layout_height="110.0dip"
                android:layout_margin="2.0dip"
                android:src="@drawable/main" />
            <TextView
                android:textAppearance="?android:textAppearanceMedium"
                android:textColor="#ff2c0000"
                android:gravity="left"
                android:id="@+id/TextView01"
                android:background="@color/black_overlay"
                android:layout_width="99dp"
                android:layout_height="30dip"
                android:layout_gravity="center_horizontal" />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:background="@color/black_overlay"
        android:padding="5.0dip"
        android:layout_width="fill_parent"
        android:layout_height="149dp"
        android:layout_weight="0.0">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="170.0dip"
                android:layout_height="110dip"
                android:layout_margin="2.0dip"
                android:src="@drawable/main" />
            <TextView
                android:textAppearance="?android:textAppearanceMedium"
                android:textColor="#ff2c0000"
                android:gravity="left"
                android:id="@+id/TextView02"
                android:background="@color/black_overlay"
                android:paddingLeft="27.0dip"
                android:layout_width="fill_parent"
                android:layout_height="30dip"
                android:textSize="20dp" />
        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent">
            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="200.0dip"
                android:layout_height="110dip"
                android:layout_margin="2.0dip"
                android:src="@drawable/main" />

            <TextView
                android:textAppearance="?android:textAppearanceMedium"
                android:textColor="#ff2c0000"
                android:gravity="left"
                android:id="@+id/TextView03"
                android:background="@color/black_overlay"
                android:layout_width="116dp"
                android:layout_height="30dip"
                android:layout_gravity="center_horizontal"
                android:textSize="20dp" />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:background="@color/black_overlay"
        android:padding="5.0dip"
        android:layout_width="fill_parent"
        android:layout_height="210dp"
        android:layout_weight="0.0">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:weightSum="1">

            <ImageView
                android:id="@+id/i1"
                android:layout_width="350dp"
                android:layout_height="110dp"
                android:layout_margin="2.0dip"
                android:src="@drawable/main" />

            <TextView
                android:textAppearance="?android:textAppearanceMedium"
                android:textColor="#ff2c0000"
                android:gravity="left"
                android:id="@+id/textV"
                android:background="@color/black_overlay"
                android:layout_width="99dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_weight="16.38" />

        </LinearLayout>

    </LinearLayout>
    <RelativeLayout
        android:orientation="horizontal"
        android:background="@color/black_overlay"
        android:layout_width="fill_parent"
        android:layout_height="120dp"
        android:layout_weight="0.71">
        <Button
            android:id="@+id/retour"
            android:text="Resultat"
            style="@style/ButtonStyle"
            android:textSize="30dp"
            android:drawableLeft="@drawable/suu"
            android:drawableStart="@drawable/suu"
            android:layout_height="wrap_content" />
    </RelativeLayout>


</LinearLayout>

