<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.aymen.projet.Analyse">
    <LinearLayout
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="420dp"
        android:paddingTop="2dp"
        android:paddingBottom="2dp"
        android:paddingRight="1dp"
        android:id="@+id/linearLayout">
        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="match_parent"
            android:layout_height="420dp"
            android:src="@drawable/main"
            android:paddingTop="2dp"
            android:paddingBottom="2dp"
            android:paddingRight="1dp"
            android:adjustViewBounds="true" />
    </LinearLayout>
    <Button
        android:id="@+id/analyse"
        android:text="Analyser"
        android:drawableLeft="@drawable/s"
        android:drawableStart="@drawable/s"
        style="@style/ButtonStyle"
        android:layout_above="@+id/accueil"
        android:layout_centerHorizontal="true" />
    <Button
        android:id="@+id/accueil"
        android:text="Re-choisir"
        android:drawableLeft="@drawable/reselect"
        android:drawableStart="@drawable/reselect"
        style="@style/ButtonStyle"
        android:textSize="24dp"
        android:layout_marginBottom="49dp"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/analyse" />
</RelativeLayout>
